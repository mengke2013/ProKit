<UserControl x:Class="Demo.ui.view.DiTypeSwitcher"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Demo.ui.view"
             mc:Ignorable="d" 
             d:DesignHeight="200" d:DesignWidth="200">
    <Grid>
        <Button Name="BtnOff" Background="White" Click="Btn_Switch_Click" Padding="0" BorderThickness="0">
            <Image Source="/Demo;component/images/switch_off.jpg" ></Image>
        </Button>
        <Button Name="BtnOn" Background="White" Click="Btn_Switch_Click" BorderThickness="0">
            <Image Source="/Demo;component/images/switch_on.jpg"  ></Image>
        </Button>
    </Grid>
</UserControl>
