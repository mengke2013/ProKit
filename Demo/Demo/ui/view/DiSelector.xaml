<UserControl x:Class="Demo.ui.view.DiSelector"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Demo.ui.view"
             mc:Ignorable="d" 
             d:DesignHeight="60" d:DesignWidth="300">
    <Grid>
        <ComboBox x:Name="comboBox"  ItemsSource="{Binding Source={StaticResource DiSelectorLookup}}"  DisplayMemberPath="DiTypeLabel" SelectedValuePath="DiTypeId"  SelectedValue="{Binding Path=DiTypeId}" 
                 HorizontalContentAlignment="Left" VerticalContentAlignment="Center" FontSize="13" FontWeight="Bold" Foreground="#FF646366" />
    </Grid>
</UserControl>
