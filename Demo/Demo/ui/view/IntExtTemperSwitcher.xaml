<UserControl x:Class="Demo.ui.view.IntExtTemperSwitcher"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Demo.ui.view"
             mc:Ignorable="d" 
             d:DesignHeight="100" d:DesignWidth="200">
    <Grid>
        <Button Name="BtnExt" Background="Red" Click="Btn_Switch_Click" Content="{Binding Path=Value}"></Button>
        <Button Name="BtnInt" Background="Green" Click="Btn_Switch_Click" Content="{Binding Path=Value}"></Button>
    </Grid>
</UserControl>
