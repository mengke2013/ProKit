<UserControl x:Class="Demo.ui.view.DioSpSwitcher"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Demo.ui.view"
             mc:Ignorable="d" 
             d:DesignHeight="200" d:DesignWidth="200">
    <Grid>
        <Ellipse Name="BtnOff" MouseDown="Btn_Switch_Click" Margin="0,0" StrokeThickness="1" Stroke="#FF000000">
            <Ellipse.Fill>
                <RadialGradientBrush>
                    <GradientStop Color="Yellow" Offset="0.9"/>
                    <GradientStop Color="#AA000000" Offset="0.85"/>
                    <GradientStop Color="Red" Offset="0.7"/>
                </RadialGradientBrush>
            </Ellipse.Fill>
        </Ellipse>
        <Ellipse Name="BtnOn" MouseDown="Btn_Switch_Click" Margin="0,0" StrokeThickness="1" Stroke="#FF000000">
            <Ellipse.Fill>
                <RadialGradientBrush>
                    <GradientStop Color="Yellow" Offset="0.9"/>
                    <GradientStop Color="#AA000000" Offset="0.85"/>
                    <GradientStop Color="Green" Offset="0.7"/>
                </RadialGradientBrush>
            </Ellipse.Fill>
        </Ellipse>

    </Grid>
</UserControl>
