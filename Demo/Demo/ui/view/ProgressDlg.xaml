<Window x:Class="Demo.ui.view.ProgressDlg"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Demo.ui.view"
        mc:Ignorable="d"
        Title="ProgressDlg" Height="300" Width="300">
    <Grid>
        <ProgressBar Name="progressBar" HorizontalAlignment="Left" Height="10" Margin="97,119,0,0" VerticalAlignment="Top" Width="100" Maximum="{Binding Path=MaxValue}" Value="{Binding Path=Progress}"/>

    </Grid>
</Window>
