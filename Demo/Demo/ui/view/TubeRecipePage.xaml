                                <TextBox Grid.Row="0" Grid.Column="3" Margin="1, 0, 0, 0" Width="80"></TextBox>
                                <TextBlock Grid.Row="0" Grid.Column="4" Margin="5, 0, 0, 0">Axis Position:</TextBlock>
                                <TextBox Grid.Row="0" Grid.Column="5" Margin="1, 0, 0, 0" Width="80"></TextBox>
                                <TextBlock Grid.Row="0" Grid.Column="6" Margin="5, 0, 0, 0">Axis Speed:</TextBlock>
                                <TextBox Grid.Row="0" Grid.Column="7" Margin="1, 0, 0, 0" Width="80"></TextBox>
                            </Grid>
                            <WrapPanel DockPanel.Dock="Right" Margin="5,2" HorizontalAlignment="Right">
                                <Button Content="Up" Padding="5,0" Margin="5,0" Width="60"/>
                                <Button Content="Down" Padding="5,0" Margin="5,0" Width="60"/>
                                <Button Content="Insert" Padding="5,0" Margin="5,0" Width="60"/>
                                <Button Content="Delete" Padding="5,0" Margin="5,0" Width="60"/>
                                <Button Content="Create" Padding="5,0" Margin="5,0" Width="60"/>
                            </WrapPanel>
                        </DockPanel>
                    </DockPanel>
                </Border>
                <ItemsControl  x:Name="StepListView" Padding="0" ItemsSource="{Binding Path=StepDetailItems}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <ContentControl>
                                <view:RecipeStepDetailItem DataContext="{Binding}"/>
                            </ContentControl>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </StackPanel>
        </ScrollViewer>

    </Grid>
</UserControl>
