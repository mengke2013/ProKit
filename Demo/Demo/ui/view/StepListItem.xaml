<UserControl x:Class="Demo.ui.view.StepListItem"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Demo.ui.view"
             mc:Ignorable="d" 
             d:DesignHeight="60" d:DesignWidth="100">
    <Grid>
        <Border BorderBrush="Black" BorderThickness="1">
        <WrapPanel>
            
            <TextBlock Margin="3" Text="{Binding Path=StepIndex}" Width="15" FontSize="12" FontWeight="Bold" Foreground="#FF402FEA" />
        </WrapPanel>
        </Border>
    </Grid>
</UserControl>
